<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quake_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.triare.p102quakealertapp.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_recommendationFragment"
            app:destination="@id/recommendationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutUsFragment"
            app:destination="@id/aboutUsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_recommendationDetailsFragment2"
            app:destination="@id/recommendationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/recommendationFragment"
        android:name="com.triare.p102quakealertapp.fragments.RecommendationFragment"
        android:label="fragment_recommendation"
        tools:layout="@layout/fragment_recommendation" />
    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.triare.p102quakealertapp.fragments.AboutUsFragment"
        android:label="fragment_about_us"
        tools:layout="@layout/fragment_about_us" />
    <fragment
        android:id="@+id/recommendationDetailsFragment"
        android:name="com.triare.p102quakealertapp.fragments.RecommendationDetailsFragment"
        android:label="fragment_recommendation_details"
        tools:layout="@layout/fragment_recommendation_details" />
</navigation>