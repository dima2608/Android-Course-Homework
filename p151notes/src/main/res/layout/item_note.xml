        android:id="@+id/btn_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        android:clickable="true"
        android:focusable="true" />
-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/note"
        style="@style/Widget.App.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/add_a_note"
        app:boxStrokeWidth="0dp"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_checkbox"
        app:layout_constraintEnd_toStartOf="@id/btn_note_bin"
        app:layout_constraintStart_toEndOf="@id/btn_checkbox"
        app:layout_constraintTop_toTopOf="@+id/btn_checkbox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/note_text"
            style="@style/Widget.App.EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:text="asdad"
            android:textAppearance="@style/TextAppearance.MdcTypographyStyles.Body1" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/btn_note_bin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_bin"
        app:layout_constraintBottom_toBottomOf="@id/btn_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_checkbox"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>